{
  "name": "npp_server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "yarn": "1.x",
    "npm": "8.x"
  },
  "scripts": {
    "prestart": "npm run build && npm run db:seed",
    "build": "babel src --delete-dir-on-start --copy-files --ignore \"src/**/*.spec.js\" --no-copy-ignored -d dist",
    "start:dev": "cross-env NODE_ENV=production pm2-runtime start ecosystem.config.js --env production",
    "start": "nodemon \"src/index.js\"",
    "test": "NODE_ENV=test nyc --reporter=text --reporter=html --reporter=lcov mocha --require @babel/register \"src/**/**/*.spec.js\" --exit --timeout 20000 --recursive",
    "lint": "node_modules/.bin/eslint \"./src/**/*.js\"",
    "db:seed": "node \"dist/scripts/seedDb\"",
    "prettify": "yarn prettier --write .",
    "prettify-check": "yarn prettier --check .",
    "docs:api": "echo 'Building REST Docs...' && apidoc -i src/containers/ -o docs/apidocs",
    "prepare": "husky install",
    "heroku-prebuild": "export NPM_CONFIG_PRODUCTION=false; export NODE_ENV=; NPM_CONFIG_PRODUCTION=false NODE_ENV=development npm install --only=dev --dev",
    "heroku-postbuild": "export NPM_CONFIG_PRODUCTION=true; export NODE_ENV=production;",
    "generate": "bash src/scripts/gen/create.sh"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "keywords": [],
  "author": "TLDO",
  "dependencies": {
    "@faker-js/faker": "^6.1.2",
    "@sendgrid/mail": "^7.6.2",
    "apidoc": "^0.53.0",
    "awilix": "^4.3.3",
    "awilix-express": "^7.0.0",
    "axios": "^0.27.0",
    "bcryptjs": "^2.4.3",
    "bitpay-sdk": "^3.0.2202",
    "body-parser": "^1.19.0",
    "chai-as-promised": "^7.1.1",
    "convict": "^6.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "dotenv-extended": "^2.9.0",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "express-validator": "^6.14.0",
    "helmet": "^4.5.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.1",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongodb-memory-server": "^8.4.2",
    "mongoose": "^6.0.11",
    "mongoose-paginate-v2": "^1.4.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "pm2": "^5.1.0",
    "request-ip": "^2.1.3",
    "stripe": "^8.222.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "7.19.0",
    "@babel/node": "7.18.10",
    "@babel/plugin-transform-runtime": "7.18.10",
    "@babel/preset-env": "7.19.0",
    "@babel/register": "7.18.9",
    "babel-plugin-module-resolver": "4.1.0",
    "chai": "4.3.6",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-babel-module": "5.3.1",
    "eslint-plugin-import": "2.26.0",
    "husky": "7.0.4",
    "mocha": "7.2.0",
    "nodemon": "2.0.19",
    "nyc": "15.1.0",
    "prettier": "2.7.1"
  },
  "license": "ISC"
}
